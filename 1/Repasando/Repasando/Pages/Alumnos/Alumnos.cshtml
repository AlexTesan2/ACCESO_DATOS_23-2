@page
@model Repasando.Pages.Alumnos.AlumnosModel
@{
}
<h1>Alumnos</h1>
<h4>@Model.Alumnos.Count()</h4>
<div class="col-sm-8"><!--Llamamos al default-->
	@await Component.InvokeAsync("AlumnosCurso")
</div>
<div class="card-deck">
	@foreach(var element in Model.Alumnos)
	{
		var Foto = "~/Imgs/"+ (element.Foto ?? "sinImagen.jpg");
		<div class="card m-3" style="min-width: 18rem; max-height: 30%">
			<div class="card-header">
				<h3>@element.Name</h3>
			</div>
			<div class="card-body">
				<img class="card-img-top img-thumbnail" asp-append-version="true" src="@Foto">
			</div>
			<div class="card-footer text-center">
				<a asp-page="/Alumnos/Details" asp-route-ID="@element.ID" class="btn btn-primary m1">View</a>
				<!--Le pasamos a la pagina el id del alumno en el q estamos a través del get-->
				<a asp-page="/Alumnos/Edit" asp-route-ID="@element.ID" class="btn btn-primary m1">Edit</a>
				<a asp-page="/Alumnos/Delete" asp-route-ID="@element.ID"  class="btn btn-danger m1">Delete</a>
			</div>
		</div>
	}

</div>
