@model IEnumerable<MVC2024.Models.VehiculoModelo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Matricula")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayName("Marca")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie)
            </th>
            <th>
                @Html.DisplayName("Extras")
            </th>
            <th>
                @Html.DisplayName("Vendedor")
            </th>
            <th>
                @Html.DisplayName("fotos")
            </th>
            <th>
                @Html.DisplayName("tamañoExtras")
            </th>
            <th>
                @Html.DisplayName("tamañoFoto")
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serie.Marca.Nom_Marca)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie.NomSerie)
            </td>
            <td>
                <table>
                    @foreach (var vex in item.VehiculoExtras)  //VehiculoExtras es una Lista
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => vex.extra.Name)
                            </td>
                        </tr>
                    }
                </table>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendedor.NomVendedor)
            </td>
            <td>
                <table>
                    @foreach (var f in item.FotosDelCoche) 
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => f.foto.nomFoto)
                            </td>
                        </tr>

                    }
                </table>
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehiculoExtras.Count)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.FotosDelCoche.Count)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td><!--el edit recibe el id del vehiculo q quieres cambiar-->
        </tr>
        }
    </tbody>
</table>
